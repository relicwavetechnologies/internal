generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserType {
  ADMIN
  EMPLOYEE
  CLIENT
}

// CRM Enums
enum DocumentType {
  CONTRACT
  INVOICE
  DESIGN
  SOW
  REPORT
  IMAGE
  VIDEO
  SPREADSHEET
  PRESENTATION
  CODE
  ARCHIVE
  AUDIO
  TEXT
  LINK
  OTHER
}

enum LogSource {
  MANUAL
  AUTO_TASK_COMPLETE
  SYSTEM
}

enum ProjectRole {
  LEAD
  DEVELOPER
  REVIEWER
  DESIGNER
  QA
}

model User {
  id         String     @id @default(cuid())
  email      String     @unique
  password   String
  name       String?
  userType   UserType   @default(ADMIN)
  companyId  String?
  company    Company?   @relation(fields: [companyId], references: [id])
  employeeId String?    @unique
  employee   Employee?  @relation(fields: [employeeId], references: [id])
  documents  Document[]
  comments   Comment[]
  createdAt  DateTime   @default(now())
}

model Company {
  id                    String                 @id @default(cuid())
  name                  String
  users                 User[]
  accounts              Account[]
  tags                  Tag[]
  expenditures          Expenditure[]
  incomes               Income[]
  employees             Employee[]
  categories            Category[]
  recurringTransactions RecurringTransaction[]
  projects              Project[]
  clients               Client[]
  createdAt             DateTime               @default(now())
}

// Employee/Payee Management
enum EmployeeType {
  EMPLOYEE
  CONTRACTOR
  VENDOR
  FREELANCER
}

enum EmployeeStatus {
  ACTIVE
  INACTIVE
  TERMINATED
}

model Employee {
  id                    String                 @id @default(cuid())
  name                  String
  email                 String?                @unique
  password              String?
  phone                 String?
  role                  String?
  department            String?
  githubProfile         String?
  salary                Float?
  employeeType          EmployeeType           @default(EMPLOYEE)
  status                EmployeeStatus         @default(ACTIVE)
  hireDate              DateTime?
  notes                 String?
  companyId             String
  company               Company                @relation(fields: [companyId], references: [id])
  user                  User?
  expenditures          Expenditure[]
  recurringTransactions RecurringTransaction[]
  tasksAssigned         Task[]
  dailyLogs             DailyLog[]
  taskAssignees         TaskAssignee[]
  projectEmployees      ProjectEmployee[]
  createdAt             DateTime               @default(now())
}

// Category System
enum CategoryType {
  EXPENSE
  INCOME
  BOTH
}

model Category {
  id                    String                 @id @default(cuid())
  name                  String
  icon                  String?
  color                 String?
  type                  CategoryType           @default(EXPENSE)
  isSystem              Boolean                @default(false)
  companyId             String?
  company               Company?               @relation(fields: [companyId], references: [id])
  expenditures          Expenditure[]
  incomes               Income[]
  recurringTransactions RecurringTransaction[]
  createdAt             DateTime               @default(now())
}

// Recurring Transactions
enum RecurringFrequency {
  DAILY
  WEEKLY
  BIWEEKLY
  MONTHLY
  QUARTERLY
  YEARLY
}

enum TransactionType {
  INCOME
  EXPENSE
}

model RecurringTransaction {
  id          String             @id @default(cuid())
  name        String
  amount      Float
  description String?
  type        TransactionType
  frequency   RecurringFrequency
  startDate   DateTime
  nextRun     DateTime
  endDate     DateTime?
  isActive    Boolean            @default(true)
  accountId   String
  account     Account            @relation(fields: [accountId], references: [id])
  employeeId  String?
  employee    Employee?          @relation(fields: [employeeId], references: [id])
  categoryId  String?
  category    Category?          @relation(fields: [categoryId], references: [id])
  companyId   String
  company     Company            @relation(fields: [companyId], references: [id])
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
}

model Account {
  id                    String                 @id @default(cuid())
  name                  String
  type                  String // Bank Account, Cash, Bitcoin Wallet, Other
  balance               Float                  @default(0)
  companyId             String
  company               Company                @relation(fields: [companyId], references: [id])
  expenditures          Expenditure[]
  incomes               Income[]
  recurringTransactions RecurringTransaction[]
  createdAt             DateTime               @default(now())
}

model Tag {
  id           String           @id @default(cuid())
  name         String
  companyId    String
  company      Company          @relation(fields: [companyId], references: [id])
  projectId    String?          @unique
  project      Project?         @relation(fields: [projectId], references: [id])
  expenditures ExpenditureTag[]
  incomes      IncomeTag[]
  createdAt    DateTime         @default(now())
}

model Expenditure {
  id          String           @id @default(cuid())
  amount      Float
  description String
  date        DateTime
  accountId   String
  account     Account          @relation(fields: [accountId], references: [id])
  companyId   String
  company     Company          @relation(fields: [companyId], references: [id])
  employeeId  String?
  employee    Employee?        @relation(fields: [employeeId], references: [id])
  categoryId  String?
  category    Category?        @relation(fields: [categoryId], references: [id])
  tags        ExpenditureTag[]
  createdAt   DateTime         @default(now())
}

model ExpenditureTag {
  expenditureId String
  expenditure   Expenditure @relation(fields: [expenditureId], references: [id], onDelete: Cascade)
  tagId         String
  tag           Tag         @relation(fields: [tagId], references: [id])

  @@id([expenditureId, tagId])
}

model Income {
  id          String      @id @default(cuid())
  amount      Float
  description String
  date        DateTime
  accountId   String
  account     Account     @relation(fields: [accountId], references: [id])
  companyId   String
  company     Company     @relation(fields: [companyId], references: [id])
  categoryId  String?
  category    Category?   @relation(fields: [categoryId], references: [id])
  tags        IncomeTag[]
  createdAt   DateTime    @default(now())
}

model IncomeTag {
  incomeId String
  income   Income @relation(fields: [incomeId], references: [id], onDelete: Cascade)
  tagId    String
  tag      Tag    @relation(fields: [tagId], references: [id])

  @@id([incomeId, tagId])
}

// Project and Task Management
enum ProjectStatus {
  PLANNING
  ACTIVE
  ON_HOLD
  COMPLETED
  CANCELLED
}

model Project {
  id          String        @id @default(cuid())
  name        String
  description String?
  status      ProjectStatus @default(PLANNING)
  startDate   DateTime?
  endDate     DateTime?
  companyId   String
  company     Company       @relation(fields: [companyId], references: [id])

  // CRM additions (all optional for backward compatibility)
  clientId           String?
  client             Client? @relation("ClientProjects", fields: [clientId], references: [id])
  hasUpworkTimesheet Boolean @default(false)
  upworkContractUrl  String?

  // Relations
  tasks            Task[]
  documents        Document[]
  dailyLogs        DailyLog[]
  modules          Module[]
  comments         Comment[]
  projectEmployees ProjectEmployee[]
  tag              Tag?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  IN_REVIEW
  COMPLETED
  CANCELLED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum ApprovalStatus {
  NONE
  PENDING
  APPROVED
  REJECTED
}

model Task {
  id          String       @id @default(cuid())
  title       String
  description String?
  status      TaskStatus   @default(TODO)
  priority    TaskPriority @default(MEDIUM)
  dueDate     DateTime?
  projectId   String
  project     Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)

  // Keep existing single assignee for backward compatibility (NO DATA LOSS)
  assigneeId String?
  assignee   Employee? @relation(fields: [assigneeId], references: [id])

  // CRM additions (all optional)
  moduleId       String?
  module         Module?    @relation("ModuleTasks", fields: [moduleId], references: [id], onDelete: Cascade)
  subModuleId    String?
  subModule      SubModule? @relation("SubModuleTasks", fields: [subModuleId], references: [id], onDelete: Cascade)
  estimatedHours Float?
  actualHours    Float?

  // New multi-assignee relation
  assignees TaskAssignee[]
  dailyLogs DailyLog[]
  comments  Comment[] // Threaded comments on tasks

  // Client Management
  isClientVisible Boolean        @default(true)
  approvalStatus  ApprovalStatus @default(NONE)

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  completedAt DateTime?
  documents   Document[]
}

// ============================================================================
// CRM MODELS - Client Portal, Documents, Logs, Hierarchy, Comments, Team
// ============================================================================

// Client Portal Authentication
model Client {
  id          String    @id @default(cuid())
  email       String    @unique
  name        String
  password    String? // Nullable for magic link auth
  magicToken  String? // For magic link authentication
  tokenExpiry DateTime?
  companyId   String
  company     Company   @relation(fields: [companyId], references: [id])
  projects    Project[] @relation("ClientProjects")
  comments    Comment[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

// Document Management with Cloudinary
model Document {
  id           String       @id @default(cuid())
  name         String
  url          String // Cloudinary URL
  type         DocumentType
  projectId    String
  project      Project      @relation(fields: [projectId], references: [id])
  uploadedById String
  uploadedBy   User         @relation(fields: [uploadedById], references: [id])
  taskId       String?
  task         Task?        @relation(fields: [taskId], references: [id], onDelete: Cascade)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
}

// Daily Work Logging (Manual + Auto)
model DailyLog {
  id          String    @id @default(cuid())
  date        DateTime  @default(now())
  projectId   String
  project     Project   @relation(fields: [projectId], references: [id])
  employeeId  String
  employee    Employee  @relation(fields: [employeeId], references: [id])
  description String
  taskId      String? // Optional - links to completed task
  task        Task?     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  hoursSpent  Float?
  notes       String?
  source      LogSource @default(MANUAL)
  createdAt   DateTime  @default(now())
}

// Project Hierarchy - Top Level
model Module {
  id          String      @id @default(cuid())
  name        String
  description String?
  projectId   String
  project     Project     @relation(fields: [projectId], references: [id])
  order       Int         @default(0)
  subModules  SubModule[]
  tasks       Task[]      @relation("ModuleTasks")
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

// Project Hierarchy - Second Level
model SubModule {
  id          String   @id @default(cuid())
  name        String
  description String?
  moduleId    String
  module      Module   @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  order       Int      @default(0)
  tasks       Task[]   @relation("SubModuleTasks")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Threaded Comments System
model Comment {
  id        String    @id @default(cuid())
  content   String
  projectId String
  project   Project   @relation(fields: [projectId], references: [id])
  userId    String? // Admin or Employee
  user      User?     @relation(fields: [userId], references: [id])
  clientId  String? // Client
  client    Client?   @relation(fields: [clientId], references: [id])
  parentId  String? // For threaded replies
  parent    Comment?  @relation("CommentReplies", fields: [parentId], references: [id])
  replies   Comment[] @relation("CommentReplies")

  taskId String?
  task   Task?   @relation(fields: [taskId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Project Team Assignment with Roles
model ProjectEmployee {
  id         String      @id @default(cuid())
  projectId  String
  project    Project     @relation(fields: [projectId], references: [id])
  employeeId String
  employee   Employee    @relation(fields: [employeeId], references: [id])
  role       ProjectRole @default(DEVELOPER)
  assignedAt DateTime    @default(now())

  @@unique([projectId, employeeId])
}

// Multi-Assignee Task Support
model TaskAssignee {
  id         String   @id @default(cuid())
  taskId     String
  task       Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  employeeId String
  employee   Employee @relation(fields: [employeeId], references: [id])
  assignedAt DateTime @default(now())

  @@unique([taskId, employeeId])
}
